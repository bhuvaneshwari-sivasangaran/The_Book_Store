<!DOCTYPE html>
<html lang="en">
<%- include('layout/header'); -%>

  <body>
    <%- include('layout/navigation'); -%>
      <section class="container-fluid row mt-4">
        <div class="col-md-2 col-lg-3 hidden-sm"></div>
        <div class="col-md-8 col-lg-6 col-sm-12">
          <h1 class="mt-5 mb-5 text-center">Add Book</h1>
          <% if ( typeof success !=='undefined' && success ) { %>
            <div id="success-div" class="alert alert-success" role="alert">
              Book added successfully.
            </div>
            <% } else if ( typeof success !=='undefined' && !success ) { %>
              <div id="failure-div" class="alert alert-danger" role="alert">
                Unable to add book! Try again later.
              </div>
              <% } %>
                <form method="post" action="/addBook">
                  <div class="mb-3">
                    <label for="isbn" class="form-label">ISBN</label>
                    <input type="text" class="form-control" id="isbn" name="isbn" aria-describedby="isbn" required>
                  </div>
                  <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                  </div>
                  <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" name="author" required>
                  </div>
                  <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" min="1" class="form-control" id="quantity" name="quantity" required>
                  </div>
                  <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input min="1" type="number" class="form-control" id="price" name="price" required>
                  </div>
                  <div class="mb-5">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" id="desc" name="desc"></textarea>
                  </div>
                  <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
                </form>
        </div>
        <div class="col-md-2 col-lg-3 hidden-sm"></div>
      </section>
      <%- include('layout/footer'); -%>
        <script>
          const successDiv = document.getElementById('success-div');
          const failureDiv = document.getElementById('failure-div');

          function hideDiv(divElement) {
            divElement.style.display = 'none';
          }

          if (successDiv) {
            setTimeout(() => hideDiv(successDiv), 3000);
          }

          if (failureDiv) {
            setTimeout(() => hideDiv(failureDiv), 3000);
          }
        </script>
  </body>

</html>